/**
 *  \file  SensorConfiguration
 *  \brief general configuration for sensor
 * 
 * 
 **/

#ifndef OSGART_SENSORCONFIGURATION
#define OSGART_SENSORCONFIGURATION 1

// std include
#include <string>

// OpenThreads include

// OSG include
#include <osg/Vec2s>
#include <osg/Vec3f>
#include <osg/Referenced>

// local include
#include "osgART/Export"



namespace osgART {

	class OSGART_EXPORT SensorConfiguration:public osg::Referenced {
	public:
	
		std::string config;
		
		SensorConfiguration();
		virtual ~SensorConfiguration();

	protected:
			int _id;
			
	};

};


#endif
