#ifndef OSGART_VIDEOALPHA_BIAS
#define OSGART_VIDEOALPHA_BIAS

#include <osgART/GenericVideo>

namespace osgART {

	class OSGART_EXPORT VideoTextureBase {
	public:
	
		VideoTextureBase(GenericVideo* video);
		
		void setAlphaBias(float alphabias);
		
		float getAlphaBias() const;
		
		
		GenericVideo* getVideo() const;
		
		void setVideo(GenericVideo* video);
		
		
	protected:
	
		float m_alphabias;
		
		osg::ref_ptr<GenericVideo> m_video;
	
		~VideoTextureBase();
	
	};

}

#endif
