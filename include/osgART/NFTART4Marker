#ifndef OSGART_NFTART4MARKER
#define OSGART_NFTART4MARKER 1

// STL include
#include <string>
#include <vector>

// local include
#include "osgART/Export"
#include "osgART/Marker"

namespace osgART {

	/**
	* \class NFTART4Marker
	*/

	class OSGART_EXPORT NFTART4Marker: public Marker
	{
	public:       

	// Standard Services
	    
		/** 
		* \brief default constructor.
		*
		*/
		NFTART4Marker();
		/**
		* \brief destructor.
		*/
		~NFTART4Marker();    


		bool initialise();
		
		void update(double trans[3][4]);

		virtual void setActive(bool a);
	    
		/**
		* \brief return the type of the maker.
		* return if the marker is a single or multi-pattern marker.
		* \return the type of the marker
		*/
		MarkerType getType() const;
	    
	protected: 
	    

	};
	
};

#endif
