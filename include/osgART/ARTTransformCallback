#ifndef OSGART_ARTTRANSFORMCALLBACK
#define OSGART_ARTTRANSFORMCALLBACK 1

// graphics include
#include <osg/MatrixTransform>

// local include
#include "osgART/Export"
#include "osgART/Marker"

namespace osgART {

	/**
	 * \class ARTTransformCallback
	 * \brief Node callback that applies a marker's transformation from ARToolKit to an OSG MatrixTransform.
	 */
	class OSGART_EXPORT ARTTransformCallback : public osg::NodeCallback {
	public:

		ARTTransformCallback(Marker* marker);
	
		virtual void operator()(osg::Node* node, osg::NodeVisitor* nv);

	protected:
		osg::ref_ptr<Marker> m_marker;
		
	};

};
#endif

