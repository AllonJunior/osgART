#ifndef OSGART_ARLOCALTRANSFORMCALLBACK
#define OSGART_ARLOCALTRANSFORMCALLBACK

#include <osg/MatrixTransform>

#include "osgART/Export"
#include "osgART/Marker"

namespace osgART {

	/**
	 * \class ARLocalTransformCallback
	 * \brief Node callback that updates a MatrixTransform based on the relationship between two markers
	 */
	class OSGART_EXPORT ARLocalTransformCallback : public osg::NodeCallback {
	protected:
		Marker* mBaseMarker;
		Marker* mPaddleMarker;

    public:

		ARLocalTransformCallback(Marker* baseMarker, Marker* paddleMarker);
    
        virtual void operator()(osg::Node* node, osg::NodeVisitor* nv);

	};
	
};

#endif


