#ifndef OSGART_ARLOCALTRANSFORMCALLBACK
#define OSGART_ARLOCALTRANSFORMCALLBACK

#include <osg/MatrixTransform>

#include "osgART/Export"

namespace osgART {

	class ARLocalTransformCallback : public osg::NodeCallback {
	protected:
		int baseMarkerId;
		int paddleMarkerId;

    public:

		ARLocalTransformCallback(int baseMarker, int paddleMarker);
    
        virtual void operator()(osg::Node* node, osg::NodeVisitor* nv);

	};
	
};

#endif


